Jenkinsfile (Declarative Pipeline)
pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building izébizé..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing izébizé..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying izébizé....'
            }
        }
    }
}
